<!doctype html>
<html ng-app="adminApp">
<head>
    <title>Login</title>
    <link href="/public/admin/support/bootstrap.min.css" rel="stylesheet">
    <script src="/public/admin/support/angular-1.3.0-rc.1/angular.min.js"></script>
    <script src="/public/admin/support/angular-1.3.0-rc.1/angular-resource.min.js"></script>

    <script src="/public/admin/js/login.js"></script>


</head>
<body ng-controller="LoginController">

<header class="header">

</header>


<section class="main container">
    <h1>Login</h1>
    <form role="form" ng-submit="submit()">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Enter username" ng-model="username">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" ng-model="password">
        </div>
        <button type="submit" class="btn btn-default">Login</button>
    </form>
</section>

<footer class="footer">

</footer>

</body>
</html>
