<!doctype html>
<html ng-app="adminApp">
<head>
    <title>Login</title>
    <link href="/_admin/static/support/bootstrap-3.2.0-dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/_admin/static/styles/styles.css" rel="stylesheet">

    <script src="/_admin/bower_components/angular/angular.min.js"></script>
    <script src="/_admin/bower_components/angular-resource/angular-resource.min.js"></script>

    <script src="/_admin/static/misc/login-controller.js"></script>
</head>
<body ng-controller="loginController">


<div class="container-fluid">
    <div class="row full-height">
        <header class="col-sm-2">
            <h1>Dashboard</h1>
        </header>
        <div class="col-sm-4">
            <h2 class="h1">Login</h2>

            {{#if badCredentials}}
                <div class="alert alert-warning" role="alert">
                    <p>Your username or password was incorrect</p>
                </div>
            {{/if}}

            <form role="form" ng-submit="submit()">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Enter username" ng-model="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" ng-model="password">
                </div>
                <div class="form-group pull-left">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" ng-model="remember_me"> Don't forget me
                        </label>
                    </div>
                </div>
                <div class="action-buttons">

                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
