<div ng-non-bindable class="web-copy-part">
    {{#if edit}}
        <div id="{{region}}">
            <div ng-controller="webCopyController" ng-init="region = '{{region}}'; pageId = '{{pageId}}'">
                <div ckedit="body" id="ck{{region}}">{{{content}}}</div>
                <button ng-click="save()">Save</button>
            </div>
        </div>
        <script src=""></script>
        <script>
            head.load(['/bower_components/angular/angular.min.js',
                       '/bower_components/ckeditor/ckeditor.js',
                       '/app/static/parts/web-copy/edit.js'], function() {
                angular.element(document).ready(function() {
                    angular.bootstrap(document.getElementById('{{region}}'), ['webCopyApp']);
                });
            });
        </script>
    {{else}}
        {{{content}}}
    {{/if}}
</div>